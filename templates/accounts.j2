<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Accounts- Personal Budget Tracker</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='styles.css') }}">
    <script>
        function showform(dowhat) {
            const sections = ['browse', 'insert'];
            sections.forEach(section => {
                const element = document.getElementById(section);
                if (element) {
                    element.style.display = 'none';
                }
            });

            const elementToShow = document.getElementById(dowhat);
            if (elementToShow) {
                elementToShow.style.display = 'block';
            }
        }
    </script>
</head>
<body onload="showform('browse')">
    <header>
        <h1>Manage Accounts</h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/categories">Manage Categories</a></li>
                <li><a href="/expenses">Manage Expenses</a></li>
                <li><a href="/income">Manage Income Sources</a></li>
                <li><a href="/users">Manage Users</a></li>
                <li><a href="/passwords">Manage User Passwords</a></li>
                <li><a href="/accounts">Manage Accounts</a></li>
            </ul>
        </nav>
    </header>
    
    <main>
        <!-- Error Messages Section -->
        {% with messages = get_flashed_messages(with_categories=true) %}
            {% if messages %}
                <div>
                    {% for category, message in messages %}
                        <p style="color:red;">{{ message }}</p>
                    {% endfor %}
                </div>
            {% endif %}
        {% endwith %}
        
        <!-- Browse User Passwords Section -->
        <section id="browse">
            <p><a href="#" onClick="showform('insert')">Add New Account</a></p>
            <table border="1" cellpadding="5">
                <thead>
                    <tr>
                        <th>Account ID</th>
                        <th>User ID</th>
                        <th>Current Balance</th>
                    </tr>
                </thead>
                <tbody>
                    {% for account in accounts %}
                    <tr>
                        <td>{{ account.userID }}</td>
                        <td>{{ account.accountID }}</td>
                        <td>{{ account.currentBalance }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </section>

        <!-- Insert User Section -->
        <section id="insert">
            <form action="{{ url_for('accounts_bp.manage_accounts') }}" method="POST">
                <legend><strong>Add New Account</strong></legend>
                <fieldset>                    
                     <label for="userID">User ID:</label>
                    <select id="userID" name="userID" required>
                        {% for user in users %}
                            <option value="{{ user.userID }}"> {{ user.userID }}</option>
                        {% endfor %}
                    </select><br>

                    <label for="currentBalance">Balance:</label>
                    <input type="number" id="currentBalance" name="currentBalance" step="0.01" required><br>
                </fieldset>
                <button type="submit">Add Account</button>
                <button type="button" onClick="showform('browse')">Cancel</button>
            </form>
        </section>
    </main>

    <footer>
        <p>Â© 2024 Personal Budget Tracker. All rights reserved.</p>
    </footer>
</body>
</html>